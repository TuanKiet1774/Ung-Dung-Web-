@model Ktr_Mau_64131060.Models.SINHVIEN

@{
    ViewBag.Title = "Chi tiết thông tin sinh viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string gtinh = "";
}
<h4 style="margin-left: 15px;">THÔNG TIN CHI TIẾT</h4>
<hr />
<table cellpadding="0" cellspacing="0" style="font-size:14px;margin-left:50px;">
    <tr>
        <td>
            <table cellpadding="2" cellspacing="10">
                
                <tr>
                    <td rowspan="8" style="width: 150px"><img src="/Images/@Html.DisplayFor(model => model.AnhSV)" width="100" height="100" /></td>
                    <td>Mã sinh viên:</td>
                    <td>@Html.DisplayFor(model => model.MaSV)</td>
                </tr>
                <tr>
                    <td>Họ sinh viên:</td>
                    <td>@Html.DisplayFor(model => model.HoSV)</td>
                </tr>
                <tr>
                    <td>Tên sinh viên:</td>
                    <td>@Html.DisplayFor(model => model.TenSV)</td>
                </tr>
                <tr>
                    <td>Giới tính:</td>
                    <td>
                        @{if (Model.GioiTinh == true)
                            { gtinh = "Nam"; }
                            else
                            { gtinh = "Nữ"; }
                        }
                        @gtinh
                    </td>
                </tr>
                <tr>
                    <td>Ngày sinh:</td>
                    <td> @(Model.NgaySinh.HasValue ? Model.NgaySinh.Value.ToString("dd/MM/yyyy") : "N/A")</td>
                </tr>
                <tr>
                    <td>Địa chỉ:</td>
                    <td>@Html.DisplayFor(model => model.DiaChi)</td>
                </tr>
                <tr>
                    <td>Lớp:</td>
                    <td>@Html.DisplayFor(model => model.LOP.TenLop)</td>
                </tr>

            </table>
        </td>
    </tr>
</table>
<p style="margin-left:50px;">
    @Html.ActionLink("Cập nhật", "Edit", new { id = Model.MaSV }) |
    @Html.ActionLink("Quay lại", "Index")
</p>
