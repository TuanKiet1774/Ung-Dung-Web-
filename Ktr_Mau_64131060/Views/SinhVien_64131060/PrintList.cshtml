@model IEnumerable<Ktr_Mau_64131060.Models.SINHVIEN>

@{
    ViewBag.Title = "PrintList";
    int i = 0;
    string gt = "";
}

<link href="~/Content/print.css" rel="stylesheet" />
<title>Bản in</title>
<table id='tb_main_title' style='margin: auto; border-collapse: collapse;' name='tb_main_title' width='700' class="table-print-title;">
    <tr>
        <th align='center' class='bold main_title'>
            TRƯỜNG ĐẠI HỌC NHA TRANG
        </th>
    </tr>
    <tr>
        <th align='center' class='bold main_title' style='height:35px'>
            DANH SÁCH SINH VIÊN
        </th>
    </tr>
</table>
<br />
<table id='tb_main_body' style='margin: auto; border-collapse: collapse;' name='tb_main_body' width='70%' class="table-print" border="1">
    <tr>
        <th>
            STT
        </th>
        <th>
            Mã SV
        </th>
        <th>
            Họ
        </th>
        <th>
            Tên
        </th>
        <th align="center">
            Giới tính
        </th>
        <th>
            Ngày sinh
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Lớp
        </th>
        <th>
            Ghi chú
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td align="center">
                @{i++;}
                @i
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaSV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoSV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSV)
            </td>
            <td align="center">
                @{if (item.GioiTinh == true)
                    { gt = "Nam"; }
                    else
                    { gt = "Nữ"; }
                }
                @gt

            </td>
            <td>
                @(item.NgaySinh.HasValue ? item.NgaySinh.Value.ToString("dd/MM/yyyy") : "N/A")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LOP.TenLop)
            </td>
            <td width='10%'>
            </td>
        </tr>
    }
</table>
@{
    var ngayIn = " ngày " + DateTime.Now.Day.ToString() + " tháng " + DateTime.Now.Month.ToString() + " năm " + DateTime.Now.Year.ToString();
}
<table id='tb_footer' name='tb_footer' width='700' border="0" class="fixheader" style="margin: auto;">
    <tr>
        <td align='left' width='30%'></td>
        <td align='center' width='30%'></td>
        <td align='center' class='sign italic'>
            Khánh Hòa, @ngayIn
        </td>
    </tr>
    <tr>
        <td align='center' width='30%' class='bold'>Giám đốc</td>
        <td align='center' width='30%' class='bold'>Kế toán</td>
        <td align='center' class='bold'>Người lập danh sách</td>
    </tr>
</table>

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>
