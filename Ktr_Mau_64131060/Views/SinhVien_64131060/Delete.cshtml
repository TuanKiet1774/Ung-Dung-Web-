@model Ktr_Mau_64131060.Models.SINHVIEN

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string gtinh = "";
}

<h3>Bạn có chắc là muốn xóa thông tin này?</h3>
<hr />
<table style="margin-left: 20px;">
    <tr>
        <td rowspan="8" style="width: 150px"><img src="/Images/@Html.DisplayFor(model => model.AnhSV)" width="100" height="100" /></td>
        <th>
            Mã sinh viên:
        </th>
        <td>
            @Html.DisplayFor(model => model.MaSV)
        </td>
    </tr>
    <tr>
        <th>
            Họ sinh viên:
        </th>
        <td>
            @Html.DisplayFor(model => model.HoSV)
        </td>
    </tr>
    <tr>
        <th>
            Tên sinh viên:
        </th>
        <td>
            @Html.DisplayFor(model => model.TenSV)
        </td>
    </tr>
    <tr>
        <th>
            Giới tính:
        </th>
        <td>
            @{if (Model.GioiTinh == true)
                { gtinh = "Nam"; }
                else
                { gtinh = "Nữ"; }
            }
            @gtinh
        </td>
    </tr>
    <tr>
        <th>
            Ngày sinh:
        </th>
        <td>
            @Html.DisplayFor(model => model.NgaySinh)
        </td>
    </tr>
    <tr>
        <th>
            Địa chỉ:
        </th>
        <td>
            @Html.DisplayFor(model => model.DiaChi)
        </td>
    </tr>
    <tr>
        <th>
            Lớp
        </th>
        <td>
            @Html.DisplayFor(model => model.LOP.TenLop)
        </td>
    </tr>
</table>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Xóa Thông Tin" class="btn btn-default" /> |
        @Html.ActionLink("Quay lại", "Index")
    </div>
}
