@model BaiTap6_64131060.Models.PhongBan


@{
    ViewBag.Title = "Chỉnh sửa phòng ban ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chỉnh sửa phòng ban</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" style="margin-left: 20px;">
    <div class="form-group">
       Tên Phòng ban
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenPB, new { htmlAttributes = new { @class = "form-control" } })
